<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_card"/>
            <stroke android:width="2dp" android:color="@color/clr_primary"/>
            <corners android:radius="@dimen/radius_md"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_card"/>
            <stroke android:width="1dp" android:color="@color/clr_border"/>
            <corners android:radius="@dimen/radius_md"/>
        </shape>
    </item>
</selector>
