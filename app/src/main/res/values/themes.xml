<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!-- نرث مباشرة من Material 3 DayNight NoActionBar كما في الـ Manifest -->
    <style name="Theme.MedCurriculum" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ألوان النظام -->
        <item name="colorPrimary">@color/mdc_theme_primary</item>
        <item name="colorOnPrimary">@color/mdc_theme_onPrimary</item>

        <item name="colorSecondary">@color/mdc_theme_secondary</item>
        <item name="colorOnSecondary">@color/mdc_theme_onSecondary</item>

        <item name="android:colorBackground">@color/mdc_theme_background</item>
        <item name="colorSurface">@color/mdc_theme_surface</item>
        <item name="colorOnSurface">@color/mdc_theme_onSurface</item>

        <!-- عناصر مادية إضافية -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/mdc_theme_background</item>

        <!-- تفعيل TextInputLayout/MaterialButton بخيارات حديثة تلقائيًا -->
        <item name="textInputStyle">@style/Widget.MedCurriculum.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.MedCurriculum.MaterialButton</item>
    </style>

    <!-- تحسينات عناصر محددة -->
    <style name="Widget.MedCurriculum.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/neutral_100</item>
    </style>

    <style name="Widget.MedCurriculum.MaterialButton" parent="Widget.Material3.Button">
        <item name="android:layout_marginTop">12dp</item>
    </style>


    <style name="Text.H2">
        <item name="android:textSize">@dimen/sp_h2</item>
        <item name="android:textColor">@color/clr_text</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- حقول -->
    <style name="Input">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:paddingLeft">@dimen/space_lg</item>
        <item name="android:paddingRight">@dimen/space_lg</item>
        <item name="android:height">@dimen/input_height</item>
        <item name="android:textColor">@color/clr_text</item>
        <item name="android:textSize">@dimen/sp_body</item>
    </style>
    <!-- ====== نصوص (Text)* ====== -->
    <!-- قاعدة عامة لتوحيد النص -->
    <style name="Text">
        <item name="android:textColor">@color/clr_text</item>
        <item name="android:textSize">@dimen/sp_body</item>
    </style>

    <style name="Text.Body" parent="Text" />

    <style name="Text.H1" parent="Text">
        <item name="android:textSize">@dimen/sp_h1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Subtle" parent="Text">
        <item name="android:textColor">@color/clr_subtext</item>
    </style>

    <style name="Text.Link" parent="Text">
        <item name="android:textColor">@color/clr_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/space_xs</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- ====== أزرار (Button)* ====== -->
    <!-- alias للاسم العام @style/Button -->
    <style name="Button">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:paddingLeft">@dimen/space_xl</item>
        <item name="android:paddingRight">@dimen/space_xl</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- المستخدم سابقًا للأزرار الأساسية -->
    <style name="Button.Primary" parent="Button" />

    <style name="Button.Tonal">
        <item name="android:background">@drawable/btn_tonal</item>
        <item name="android:textColor">@color/clr_text</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:paddingLeft">@dimen/space_xl</item>
        <item name="android:paddingRight">@dimen/space_xl</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Danger">
        <item name="android:background">@drawable/btn_danger</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">@dimen/btn_height</item>
        <item name="android:paddingLeft">@dimen/space_xl</item>
        <item name="android:paddingRight">@dimen/space_xl</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ====== TextInputLayout (TIL)* ====== -->
    <!-- alias للاسم العام @style/TIL -->
    <style name="TIL">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/clr_card</item>
        <item name="boxStrokeColor">@color/ti_box_stroke</item>
        <item name="boxStrokeErrorColor">@color/ti_box_error_stroke</item>
        <item name="hintTextColor">@color/ti_hint</item>
        <item name="errorTextColor">@color/ti_error_text</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <style name="TIL.Outlined" parent="TIL" />

    <!-- ====== بطاقات (Card) ====== -->
    <style name="Card">
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">@dimen/space_xl</item>
    </style>
</resources>