<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_xl"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_screen"
    android:layoutDirection="rtl">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- بطاقة الإرشاد + الإجراء -->
    <LinearLayout
        style="@style/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_lg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHint"
            style="@style/Text.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_info"
            android:drawablePadding="@dimen/space_sm"
            android:maxLines="5"
            android:ellipsize="end"
            android:text="@string/resend_verification_hint" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResend"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            android:text="@string/resend_verification"
            app:icon="@drawable/ic_email"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/space_sm"
            app:iconTint="@android:color/white" />
    </LinearLayout>

</LinearLayout>
