<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_xl"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_screen"
    android:layoutDirection="rtl">
    <!-- شعار التطبيق -->
    <ImageView
        android:layout_width="102dp"
        android:layout_height="101dp"
        android:layout_marginTop="@dimen/space_xl"
        android:layout_marginBottom="@dimen/space_lg"
        android:contentDescription="شعار التطبيق"
        android:scaleType="centerInside"
        android:src="@drawable/icon" />
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal" />

    <!-- كلمة المرور الحالية -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/TIL.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_lg"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/clr_subtext"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/clr_subtext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="كلمة المرور الحالية"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:autofillHints="password" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- كلمة المرور الجديدة -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/TIL.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_md"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/clr_subtext"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/clr_subtext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="كلمة المرور الجديدة"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:autofillHints="newPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- تأكيد كلمة المرور -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/TIL.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_md"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/clr_subtext"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/clr_subtext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="تأكيد كلمة المرور"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:autofillHints="newPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSave"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="حفظ"
        android:layout_marginTop="@dimen/space_xl"
        app:icon="@drawable/ic_upload"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/space_sm"
        app:iconTint="@android:color/white" />

</LinearLayout>
