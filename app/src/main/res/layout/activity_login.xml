<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_xl"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_screen"
    android:layoutDirection="rtl">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- شعار التطبيق -->
    <ImageView
        android:layout_width="102dp"
        android:layout_height="101dp"
        android:layout_marginTop="@dimen/space_xl"
        android:layout_marginBottom="@dimen/space_lg"
        android:contentDescription="شعار التطبيق"
        android:scaleType="centerInside"
        android:src="@drawable/icon" />

    <!-- البريد الإلكتروني -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/TIL.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/clr_subtext"
        app:endIconMode="clear_text"
        app:endIconTint="@color/clr_subtext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="البريد الالكتروني"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:autofillHints="emailAddress"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- كلمة المرور -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/TIL.Outlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_md"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/clr_subtext"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/clr_subtext">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="كلمة المرور"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تسجيل الدخول"
        android:layout_marginTop="@dimen/space_xl"
        app:icon="@drawable/ic_login"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/space_sm"
        app:iconTint="@android:color/white" />

    <TextView
        android:id="@+id/linkRegister"
        style="@style/Text.Link"
        android:text="إنشاء حساب جديد"
        android:layout_marginTop="@dimen/space_lg" />

    <TextView
        android:id="@+id/linkForgot"
        style="@style/Text.Link"
        android:text="نسيت كلمة السر؟"
        android:layout_marginTop="@dimen/space_sm" />

</LinearLayout>
