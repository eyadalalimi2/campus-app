<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_xl"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:background="@drawable/bg_screen"
    android:layoutDirection="rtl">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <!-- ترويسة الملف الشخصي -->
        <LinearLayout
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/space_sm"
                    android:background="@drawable/oval_mask"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    android:src="@drawable/avatar_placeholder"
                    android:contentDescription="صورة الملف الشخصي" />

                <TextView
                    android:id="@+id/txtName"
                    style="@style/Text.H1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_md"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/txtEmail"
                    style="@style/Text.Subtle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- تفاصيل -->
        <LinearLayout
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPhone"
                style="@style/Text.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="@dimen/space_sm"
                android:drawableTint="@color/clr_subtext"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtStudentNumber"
                style="@style/Text.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:drawableStart="@drawable/ic_id"
                android:drawablePadding="@dimen/space_sm"
                android:drawableTint="@color/clr_subtext"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtCountry"
                style="@style/Text.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:drawableStart="@drawable/ic_flag"
                android:drawablePadding="@dimen/space_sm"
                android:drawableTint="@color/clr_subtext"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txtIds"
                style="@style/Text.Body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:drawableStart="@drawable/ic_list"
                android:drawablePadding="@dimen/space_sm"
                android:drawableTint="@color/clr_subtext"
                android:maxLines="2"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- إجراءات -->
        <LinearLayout
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تعديل البيانات"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/space_sm"
                app:iconTint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangePassword"
                style="@style/Button.Tonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:text="تغيير كلمة المرور"
                app:icon="@drawable/ic_lock"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/space_sm"
                app:iconTint="@color/clr_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAvatar"
                style="@style/Button.Tonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:text="تعديل الصورة"
                app:icon="@drawable/ic_image"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/space_sm"
                app:iconTint="@color/clr_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResendVerification"
                style="@style/Button.Tonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:text="@string/resend_verification"
                app:icon="@drawable/ic_email"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/space_sm"
                app:iconTint="@color/clr_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Button.Danger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_sm"
                android:text="تسجيل الخروج"
                app:icon="@drawable/ic_logout"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/space_sm"
                app:iconTint="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
