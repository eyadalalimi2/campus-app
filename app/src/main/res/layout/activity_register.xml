<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/space_xl"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:background="@drawable/bg_screen"
    android:layoutDirection="rtl">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <!-- بطاقة البيانات الأساسية -->
        <LinearLayout
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_lg"
            android:orientation="vertical">

            <!-- الاسم -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TIL.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/clr_subtext">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="الاسم"
                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    android:maxLength="50" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- البريد الإلكتروني -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TIL.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/clr_subtext"
                app:endIconMode="clear_text"
                app:endIconTint="@color/clr_subtext">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="البريد الالكتروني"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:autofillHints="emailAddress"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- كلمة المرور -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TIL.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/clr_subtext"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/clr_subtext">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="كلمة المرور"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- بطاقة معلومات الاتصال والأكاديمية -->
        <LinearLayout
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_md"
            android:orientation="vertical">

            <!-- الهاتف -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TIL.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/clr_subtext"
                app:helperText="اكتب رقم الهاتف مع رمز الدولة">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="رقم الهاتف"
                    android:inputType="phone"
                    android:imeOptions="actionNext"
                    android:maxLength="20" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- الرقم الجامعي -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TIL.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:startIconDrawable="@drawable/ic_id"
                app:startIconTint="@color/clr_subtext">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputStudentNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="الرقم الجامعي"
                    android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- الدولة -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TIL.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:startIconDrawable="@drawable/ic_flag"
                app:startIconTint="@color/clr_subtext">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="الدولة"
                    android:inputType="textCapWords"
                    android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- الجامعة -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TIL.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:startIconDrawable="@drawable/ic_school"
                app:startIconTint="@color/clr_subtext">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputUniversityId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="الجامعة"
                    android:inputType="number"
                    android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- الكلية -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TIL.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:startIconDrawable="@drawable/ic_college"
                app:startIconTint="@color/clr_subtext">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputCollegeId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="الكلية"
                    android:inputType="number"
                    android:imeOptions="actionNext" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- التخصص/القسم -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TIL.Outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_md"
                app:startIconDrawable="@drawable/ic_book"
                app:startIconTint="@color/clr_subtext">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputMajorId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="التخصص او القسم"
                    android:inputType="number"
                    android:imeOptions="actionDone" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- إجراء -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إنشاء حساب"
            android:layout_marginTop="@dimen/space_xl"
            app:icon="@drawable/ic_user_add"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/space_sm"
            app:iconTint="@android:color/white" />

    </LinearLayout>
</ScrollView>
