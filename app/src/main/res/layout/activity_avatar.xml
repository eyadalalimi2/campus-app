<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/space_xl"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_screen">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imgPreview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/space_md"
        android:background="@drawable/oval_mask"
        android:clipToOutline="true"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_placeholder"
        android:contentDescription="معاينة الصورة" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPick"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_lg"
        android:text="اختيار صورة"
        app:icon="@drawable/ic_image"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/space_sm"
        app:iconTint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUpload"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_sm"
        android:text="رفع/تحديث"
        app:icon="@drawable/ic_upload"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/space_sm"
        app:iconTint="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDelete"
        style="@style/Button.Danger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_sm"
        android:text="حذف الصورة"
        app:icon="@drawable/ic_delete"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/space_sm"
        app:iconTint="@android:color/white" />

</LinearLayout>
